body {
  font-family: Arial, sans-serif;
  font-size: 16px;
  margin: 20px;
}

h1 {
  font-size: 24px;
  font-weight: bold;
  margin-top: 0;
}

h2 {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

p {
  margin-bottom: 10px;
}

.question {
  margin-bottom: 20px;
}

.choices {
  list-style: none;
  padding: 0;
  margin: 0;
}

.choices li {
  margin-bottom: 10px;
  padding: 5px;
  border: 3px solid #F898A4;
  border-radius: 5px;
}

.choices li input {
  margin-right: 10px;
}

/* เพิ่มเติม */

.container {
  width: 800px;
  margin: 0 auto;
}

.header {
  background-color: #f5f5f5;
  padding: 20px;
  text-align: center;
}

.header1 {

  padding: 20px;
  text-align: center;
}
.footer {
  background-color: #f5f5f5;
  padding: 20px;
  text-align: center;
}

.instructions {
  margin-bottom: 20px;
}

.button {
  background-color: #000;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
.inner {
    background: #E0E0F3;
    margin: 2% 0;
    padding: 0 20px;
    justify-content: center;
}